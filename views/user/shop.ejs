          <div class="container mb-5">
            <div class="row">
              <div class="col-lg-12">
                <div class="sorting-wrapper">
                  <div class="sorting-box d-flex justify-content-between align-items-center p-3 bg-white rounded shadow-sm">
                    <div class="found-items">
                      <span class="text-muted"><i class="fas fa-tag me-2"></i> Showing <%= products.length %> products</span>
                    </div>
                    <div class="sorting-options d-flex align-items-center">
                      <label class="me-2 text-muted">Sort by:</label>
                      <form id="sortForm" method="GET" action="/shop" class="mb-0">
                        <!-- Retain current filters -->
                        <input type="hidden" name="category" value="<%= selectedCategory || '' %>">
                        <input type="hidden" name="minPrice" value="<%= currentMinPrice %>">
                        <input type="hidden" name="maxPrice" value="<%= currentMaxPrice === priceRange.maxPrice ? '' : currentMaxPrice %>">
                        <input type="hidden" name="search" value="<%= searchQuery || '' %>">
                        <input type="hidden" name="page" value="<%= currentPage %>">
                        <select class="form-select" name="sort" onchange="this.form.submit()">
                          <option value="default" <%= currentSort === 'default' ? 'selected' : '' %>>Featured</option>
                          <option value="priceAsc" <%= currentSort === 'priceAsc' ? 'selected' : '' %>>Price: Low to High</option>
                          <option value="priceDesc" <%= currentSort === 'priceDesc' ? 'selected' : '' %>>Price: High to Low</option>
                          <option value="nameAsc" <%= currentSort === 'nameAsc' ? 'selected' : '' %>>Name: A to Z</option>
                          <option value="nameDesc" <%= currentSort === 'nameDesc' ? 'selected' : '' %>>Name: Z to A</option>
                        </select>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Products Rendering -->
          <div class="row">
            <% if (products && products.length > 0) { %>
              <% products.forEach(product => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                  <div class="single-product">
                    <a href="/productDetails/<%= product._id %>">
                      <div class="product-img">
                        <img class="img-fluid w-100" src="/Uploads/product-Images/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                      </div>
                    </a>
                    <div class="product-details">
                      <a href="/productDetails/<%= product._id %>">
                        <h6><%= product.productName %></h6>
                      </a>
                      <div class="stock-status <%= product.status %>">
                        <%= product.status.charAt(0).toUpperCase() + product.status.slice(1) %>
                      </div>
                      <div class="color-options">
                        Colors:
                        <% const availableColors = Object.keys(product.colorStock).filter(color => product.colorStock[color] > 0); %>
                        <%= availableColors.length > 0 ? availableColors.join(', ') : 'None' %>
                      </div>
                      <div class="price">
                        <h6>₹<%= product.offerprice > 0 ? product.offerprice : product.price %></h6>
                        <% if (product.offerprice > 0 && product.offerprice < product.price) { %>
                          <h6 class="l-through">₹<%= product.price %></h6>
                        <% } %>
                      </div>
                      <div class="prd-bottom">
                        <a href="/add-to-cart/<%= product._id %>" class="social-info">
                          <span class="ti-bag"></span>
                          <p class="hover-text">Add to Bag</p>
                        </a>
                        <a href="/add-to-wishlist/<%= product._id %>" class="social-info">
                          <span class="lnr lnr-heart"></span>
                          <p class="hover-text">Wishlist</p>
                        </a>
                        <a href="/compare/<%= product._id %>" class="social-info">
                          <span class="lnr lnr-sync"></span>
                          <p class="hover-text">Compare</p>
                        </a>
                        <a href="/productDetails/<%= product._id %>" class="social-info">
                          <span class="lnr lnr-move"></span>
                          <p class="hover-text">View More</p>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="col-12 text-center py-5">
                <h4>No products found matching your criteria</h4>
                <p>Try adjusting your filters or search term</p>
              </div>
            <% } %>
          </div>
          <!-- Pagination Controls -->
          <div class="col-12">
            <nav aria-label="Page navigation">
              <ul class="pagination justify-content-center">
                <% if (currentPage > 1) { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>&sort=<%= currentSort %>&category=<%= selectedCategory %>&minPrice=<%= currentMinPrice %>&maxPrice=<%= currentMaxPrice %>&search=<%= searchQuery %>" aria-label="Previous">
                      <span aria-hidden="true">«</span>
                    </a>
                  </li>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                  <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&sort=<%= currentSort %>&category=<%= selectedCategory %>&minPrice=<%= currentMinPrice %>&maxPrice=<%= currentMaxPrice %>&search=<%= searchQuery %>"><%= i %></a>
                  </li>
                <% } %>
                <% if (currentPage < totalPages) { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>&sort=<%= currentSort %>&category=<%= selectedCategory %>&minPrice=<%= currentMinPrice %>&maxPrice=<%= currentMaxPrice %>&search=<%= searchQuery %>" aria-label="Next">
                      <span aria-hidden="true">»</span>
                    </a>
                  </li>
                <% } %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Mobile menu toggle
      const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
      const closeMenuBtn = document.querySelector('.close-menu');
      const navMenu = document.querySelector('.nav-menu');
      const overlay = document.getElementById('menu-overlay');

      mobileMenuToggle.addEventListener('click', () => {
        navMenu.classList.add('active');
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      });

      closeMenuBtn.addEventListener('click', closeMenu);
      overlay.addEventListener('click', closeMenu);

      function closeMenu() {
        navMenu.classList.remove('active');
        overlay.classList.remove('active');
        document.body.style.overflow = '';
      }

      // Search icon click event
      const searchIcon = document.getElementById('searchIcon');
      const searchInputGroup = document.getElementById('searchInputGroup');
      if (searchIcon && searchInputGroup) {
        searchIcon.addEventListener('click', function (e) {
          if (!searchInputGroup.classList.contains('active')) {
            e.preventDefault(); // Prevent form submission on the first click
            searchInputGroup.classList.add('active');
          }
        });
      }

      // Wishlist dropdown toggle
      const wishlistBtn = document.getElementById('wishlist-btn');
      const mobileWishlistBtn = document.getElementById('mobile-wishlist-btn');
      const wishlistDropdown = document.getElementById('wishlist-dropdown');

      wishlistBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        wishlistDropdown.classList.toggle('active');
        cartDropdown.classList.remove('active');
      });

      mobileWishlistBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        wishlistDropdown.classList.toggle('active');
        cartDropdown.classList.remove('active');
        closeMenu();
      });

      // Cart dropdown toggle
      const cartBtn = document.getElementById('cart-btn');
      const mobileCartBtn = document.getElementById('mobile-cart-btn');
      const cartDropdown = document.getElementById('cart-dropdown');

      cartBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        cartDropdown.classList.toggle('active');
        wishlistDropdown.classList.remove('active');
      });

      mobileCartBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        cartDropdown.classList.toggle('active');
        wishlistDropdown.classList.remove('active');
        closeMenu();
      });

      // Close dropdowns when clicking outside
      document.addEventListener('click', () => {
        wishlistDropdown.classList.remove('active');
        cartDropdown.classList.remove('active');
      });

      // Prevent dropdown closing when clicking inside it
      wishlistDropdown.addEventListener('click', (e) => {
        e.stopPropagation();
      });

      cartDropdown.addEventListener('click', (e) => {
        e.stopPropagation();
      });

      // Remove item functionality
      const removeButtons = document.querySelectorAll('.dropdown-item-remove');

      removeButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          const item = e.target.closest('.dropdown-item');
          const dropdown = item.closest('.dropdown');
          item.remove();

       
          const remainingItems = dropdown.querySelectorAll('.dropdown-item').length;
          const headerText = dropdown.querySelector('h3');

          if (dropdown.id === 'wishlist-dropdown') {
            headerText.textContent = `My Wishlist (${remainingItems})`;
            document.querySelectorAll('.fa-heart').forEach(icon => {
              icon.parentElement.querySelector('.badge').textContent = remainingItems;
            });
          } else {
            headerText.textContent = `Shopping Cart (${remainingItems})`;
            document.querySelectorAll('.fa-shopping-cart').forEach(icon => {
              icon.parentElement.querySelector('.badge').textContent = remainingItems;
            });
          }
        });
      });

      // Search functionality
      const searchInputs = document.querySelectorAll('.search-input');

      searchInputs.forEach(input => {
        input.addEventListener('keypress', (e) => {
          if (e.key === 'Enter') {
            const searchTerm = input.value.trim();
            if (searchTerm) {
              alert(`Searching for: ${searchTerm}`);
             
            }
          }
        });
      });

      // Filter form submission
      const filterForm = document.getElementById('filterForm');
      if (filterForm) {
        filterForm.addEventListener('submit', function(e) {
          const minPrice = parseFloat(this.elements.minPrice.value) || 0;
          const maxPrice = parseFloat(this.elements.maxPrice.value) || <%-priceRange.maxPrice%>;
          if (minPrice > maxPrice) {
            e.preventDefault();
            Swal.fire({
              icon: 'error',
              title: 'Invalid Price Range',
              text: 'Minimum price cannot be greater than maximum price'
            });
            return;
          }
          showLoading('Applying filters...');
        });
      }

      // Sort form submission
      const sortForm = document.getElementById('sortForm');
      if (sortForm) {
        sortForm.addEventListener('submit', function() {
          showLoading('Sorting products...');
        });
      }

      function showLoading(message) {
        Swal.fire({
          title: message,
          allowOutsideClick: false,
          didOpen: () => {
            Swal.showLoading();
          }
        });
      }
    });
  </script>
</body>
</html>
