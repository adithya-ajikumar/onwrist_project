                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="<%= category._id %>" value="<%= category._id %>" <%= selectedCategory === category._id.toString() ? 'checked' : '' %>>
                                        <label class="form-check-label" for="<%= category._id %>"><%= category.name %></label>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                        <!-- Price Range Filter -->
                        <div class="mb-4">
                            <h5 class="fw-semibold mb-3">Price Range</h5>
                            <div class="price-range">
                                <div class="input-group mb-2">
                                    <span class="input-group-text">₹</span>
                                    <input type="number" class="form-control" name="minPrice" value="<%= currentMinPrice %>" min="<%= priceRange.minPrice %>" max="<%= priceRange.maxPrice %>" placeholder="Min price">
