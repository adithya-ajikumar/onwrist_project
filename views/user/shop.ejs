<!-- Modernized CSS for better spacing and visual design -->
<style>
    :root {
        --primary-color: #4a6cf7;
        --secondary-color: #ff6b6b;
        --dark-color: #0e1133;
        --light-color: #f5f5f5;
        --body-color: #fbfbfb;
        --border-color: #eeeeee;
        --shadow-color: rgba(0, 0, 0, 0.05);
        --font-primary: 'Inter', sans-serif;
    }

    body {
        font-family: var(--font-primary);
        background-color: var(--body-color);
        color: var(--dark-color);
    }

    .banner-area {
        margin-top: 80px;
        position: relative;
    }

    .banner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to right, rgba(0,0,0,0.4), rgba(0,0,0,0.1));
        z-index: 1;
    }

    .banner-content {
        position: absolute;
        top: 50%;
        left: 10%;
        transform: translateY(-50%);
        z-index: 2;
        color: white;
        max-width: 500px;
    }

    .banner-content h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .banner-content p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .btn-shop {
        background-color: var(--secondary-color);
        color: white;
        padding: 12px 30px;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-shop:hover {
        background-color: var(--primary-color);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 2px 15px var(--shadow-color);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

    .main-content {
        position: relative;
        z-index: 1;
    }

    /* Features section */
    .features-area {
        padding: 4rem 0;
        background-color: white;
    }

    .features-inner {
        margin-top: -70px;
        position: relative;
        z-index: 2;
    }

    .single-features {
        padding: 2rem;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px var(--shadow-color);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .single-features:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    .f-icon {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--light-color);
        border-radius: 50%;
        margin-bottom: 1.5rem;
    }

    .single-features h6 {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.8rem;
    }

    /* Category Area */
    .category-area {
        padding: 5rem 0;
        background-color: var(--body-color);
    }

    .single-deal {
        position: relative;
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px var(--shadow-color);
        transition: all 0.3s ease;
    }

    .single-deal:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.6), rgba(0,0,0,0.1));
        z-index: 1;
        opacity: 0.7;
        transition: all 0.3s ease;
    }

    .single-deal:hover .overlay {
        opacity: 0.9;
    }

    .deal-details {
        position: absolute;
        bottom: 20px;
        left: 20px;
        z-index: 2;
    }

    .deal-title {
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
    }

    /* Sorting and Filtering */
    .sorting-wrapper {
        margin-bottom: 2rem;
    }

    .sorting-box {
        background-color: white;
        padding: 1.2rem;
        border-radius: 15px;
        box-shadow: 0 5px 15px var(--shadow-color);
        transition: all 0.3s ease;
    }

    .sorting-box:hover {
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    .form-select {
        min-width: 200px;
        border-radius: 30px;
        padding: 10px 20px;
        border: 1px solid var(--border-color);
        cursor: pointer;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .form-select:hover, .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(74, 108, 247, 0.1);
    }

    /* Filter Sidebar */
    .filter-wrapper {
        background-color: white;
        border-radius: 15px;
        padding: 1.5rem;
        position: sticky;
        top: 100px;
        box-shadow: 0 5px 15px var(--shadow-color);
    }

    .category-list {
        max-height: 200px;
        overflow-y: auto;
        padding-right: 10px;
        scrollbar-width: thin;
    }

    .category-list::-webkit-scrollbar {
        width: 5px;
    }

    .category-list::-webkit-scrollbar-thumb {
        background-color: var(--border-color);
        border-radius: 10px;
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .form-check-label {
        font-weight: 500;
    }

    .price-range input {
        border-radius: 30px;
        border: 1px solid var(--border-color);
        padding: 8px 15px;
    }

    /* Product Cards */
    .single-product {
        background-color: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px var(--shadow-color);
        margin-bottom: 30px;
        transition: all 0.3s ease;
    }

    .single-product:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .product-img {
        position: relative;
        overflow: hidden;
    }

    .product-img img {
        transition: all 0.5s ease;
    }

    .single-product:hover .product-img img {
        transform: scale(1.05);
    }

    .product-details {
        padding: 1.5rem;
    }

    .product-details h6 {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 1rem;
        height: 50px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .price {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

    .price h6 {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0;
        height: auto;
    }

    .l-through {
        text-decoration: line-through;
        color: #999;
        margin-left: 10px;
        font-size: 0.9rem;
        font-weight: 400;
    }

    .prd-bottom {
        display: flex;
        justify-content: space-between;
    }

    .social-info {
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        border-radius: 50%;
        background-color: var(--light-color);
        color: var(--dark-color);
        transition: all 0.3s ease;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .social-info:hover {
        background-color: var(--primary-color);
        color: white;
    }

    .hover-text {
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        min-width: 100px;
        background-color: var(--primary-color);
        color: white;
        text-align: center;
        border-radius: 5px;
        padding: 5px 10px;
        visibility: hidden;
        opacity: 0;
        transition: all 0.3s ease;
        font-size: 0.8rem;
        margin-bottom: 5px;
    }

    .social-info:hover .hover-text {
        visibility: visible;
        opacity: 1;
    }

    .stock-status {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .stock-status.instock {
        color: green;
    }

    .stock-status.outofstock {
        color: red;
    }

    .stock-status.available {
        color: orange;
    }

    .color-options {
        font-size: 0.8rem;
        color: #666;
    }

    /* Search Box Animation */
    .search-bar-container {
        position: relative;
    }

    .search-wrapper {
        display: flex;
        align-items: center;
    }

    .search-input-group {
        position: absolute;
        top: 0;
        right: 0;
        display: flex;
        align-items: center;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    .search-input-group.active {
        opacity: 1;
        visibility: visible;
    }

    .search-input {
        border: 1px solid var(--border-color);
        border-radius: 30px;
        padding: 10px 20px;
        width: 300px;
        margin-right: 10px;
        transition: width 0.3s ease;
    }

    .search-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(74, 108, 247, 0.1);
    }

    .search-button {
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .search-button:hover {
        background-color: var(--secondary-color);
    }

    /* Responsive adjustments */
    @media (max-width: 992px) {
        .banner-content h1 {
            font-size: 2.5rem;
        }

        .features-inner {
            margin-top: 0;
        }
    }

    @media (max-width: 768px) {
        .banner-area {
            margin-top: 60px;
        }

        .banner-content {
            left: 5%;
            max-width: 80%;
        }

        .banner-content h1 {
            font-size: 2rem;
        }

        .sorting-box {
            flex-direction: column;
            gap: 15px;
        }

        .form-select {
            width: 100%;
        }
    }
</style>

