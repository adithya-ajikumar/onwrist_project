                                            <% const availableColors = Object.keys(product.colorStock).filter(color => product.colorStock[color] > 0); %>
                                            <%= availableColors.length > 0 ? availableColors.join(', ') : 'None' %>
                                        </div>
                                        <div class="price">
                                            <h6>₹<%= product.offerprice > 0 ? product.offerprice : product.price %></h6>
                                            <% if (product.offerprice > 0 && product.offerprice < product.price) { %>
                                                <h6 class="l-through">₹<%= product.price %></h6>
                                            <% } %>
                                        </div>
                                        <div class="prd-bottom">
                                            <a href="/add-to-cart/<%= product._id %>" class="social-info">
                                                <span class="ti-bag"></span>
                                                <p class="hover-text">Add to Bag</p>
                                            </a>
                                            <a href="/add-to-wishlist/<%= product._id %>" class="social-info">
                                                <span class="lnr lnr-heart"></span>
                                                <p class="hover-text">Wishlist</p>
                                            </a>
                                            <a href="/compare/<%= product._id %>" class="social-info">
                                                <span class="lnr lnr-sync"></span>
                                                <p class="hover-text">Compare</p>
                                            </a>
                                            <a href="/productDetails/<%= product._id %>" class="social-info">
                                                <span class="lnr lnr-move"></span>
                                                <p class="hover-text">View More</p>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center py-5">
                            <h4>No products found matching your criteria</h4>
                            <p>Try adjusting your filters or search term</p>
                        </div>
                    <% } %>
                </div>
                <!-- Pagination Controls -->
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&sort=<%= currentSort %>&category=<%= selectedCategory %>&minPrice=<%= currentMinPrice %>&maxPrice=<%= currentMaxPrice %>&search=<%= searchQuery %>" aria-label="Previous">
                                        <span aria-hidden="true">«</span>
                                    </a>
                                </li>
                            <% } %>
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&sort=<%= currentSort %>&category=<%= selectedCategory %>&minPrice=<%= currentMinPrice %>&maxPrice=<%= currentMaxPrice %>&search=<%= searchQuery %>"><%= i %></a>
                                </li>
                            <% } %>
                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&sort=<%= currentSort %>&category=<%= selectedCategory %>&minPrice=<%= currentMinPrice %>&maxPrice=<%= currentMaxPrice %>&search=<%= searchQuery %>" aria-label="Next">
                                        <span aria-hidden="true">»</span>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Filter form submission
    const filterForm = document.getElementById('filterForm');
    if (filterForm) {
        filterForm.addEventListener('submit', function(e) {
            const minPrice = parseFloat(this.elements.minPrice.value) || 0;
            const maxPrice = parseFloat(this.elements.maxPrice.value) || <%= priceRange.maxPrice %>;
            if (minPrice > maxPrice) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Price Range',
                    text: 'Minimum price cannot be greater than maximum price'
                });
                return;
            }
            showLoading('Applying filters...');
        });
    }

    // Sort form submission
    const sortForm = document.getElementById('sortForm');
    if (sortForm) {
        sortForm.addEventListener('submit', function() {
            showLoading('Sorting products...');
        });
    }

    // Search icon click event
    const searchIcon = document.getElementById('searchIcon');
    const searchInputGroup = document.getElementById('searchInputGroup');
    if (searchIcon && searchInputGroup) {
        searchIcon.addEventListener('click', function() {
            searchInputGroup.classList.toggle('active');
        });
    }

    function showLoading(message) {
        Swal.fire({
            title: message,
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
    }
});
</script>

