  <style>
    :root {
      --primary-color: #4a6cf7;
      --secondary-color: #ff6b6b;
      --dark-color: #0e1133;
      --light-color: #f5f5f5;
      --body-color: #fbfbfb;
      --border-color: #eeeeee;
      --shadow-color: rgba(0, 0, 0, 0.05);
      --font-primary: 'Inter', sans-serif;
    }

    body {
      font-family: var(--font-primary);
      background-color: var(--body-color);
      color: var(--dark-color);
      margin: 0;
      padding: 0;
    }

    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 2px 15px var(--shadow-color);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 30px;
    }

    .logo {
      font-weight: 700;
      font-size: 24px;
      color: var(--primary-color);
    }

    .nav-menu {
      display: flex;
      align-items: center;
    }

    .nav-menu ul {
      display: flex;
      list-style: none;
      gap: 30px;
      margin: 0;
      padding: 0;
    }

    .nav-menu a {
      text-decoration: none;
      color: var(--dark-color);
      font-weight: 500;
      transition: color 0.3s;
    }

    .nav-menu a:hover {
      color: var(--primary-color);
    }

    .search-bar-container {
      position: relative;
      margin-left: 20px;
    }

    .search-wrapper {
      display: flex;
      align-items: center;
    }

    .search-input-group {
      position: absolute;
      top: 0;
      right: 0;
      display: flex;
      align-items: center;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    .search-input-group.active {
      opacity: 1;
      visibility: visible;
    }

    .search-input {
      border: 1px solid var(--border-color);
      border-radius: 30px;
      padding: 10px 20px;
      width: 300px;
      margin-right: 10px;
      transition: width 0.3s ease;
    }

    .search-input:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(74, 108, 247, 0.1);
    }

    .search-button {
      background-color: var(--primary-color);
      color: white;
      border: none;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .search-button:hover {
      background-color: var(--secondary-color);
    }

    .nav-icons {
      display: flex;
      align-items: center;
      margin-left: 20px;
    }

    .icon-btn {
      background: none;
      border: none;
      color: var(--dark-color);
      font-size: 18px;
      cursor: pointer;
      margin-left: 20px;
      position: relative;
      transition: color 0.3s;
    }

    .icon-btn:hover {
      color: var(--primary-color);
    }

    .badge {
      position: absolute;
      top: -8px;
      right: -8px;
      background-color: var(--primary-color);
      color: white;
      font-size: 10px;
      font-weight: bold;
      height: 18px;
      width: 18px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .dropdown {
      position: absolute;
      right: 0;
      top: 100%;
      background-color: white;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      border-radius: 8px;
      width: 300px;
      z-index: 200;
      padding: 15px;
      margin-top: 10px;
      display: none;
    }

    .dropdown.active {
      display: block;
    }

    .dropdown-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid var(--border-color);
      padding-bottom: 10px;
      margin-bottom: 15px;
    }

    .dropdown-header h3 {
      font-size: 16px;
      color: var(--primary-color);
    }

    .dropdown-item {
      display: flex;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid var(--border-color);
    }

    .dropdown-item-img {
      width: 60px;
      height: 60px;
      background-color: var(--border-color);
      border-radius: 4px;
      margin-right: 15px;
    }

    .dropdown-item-info {
      flex-grow: 1;
    }

    .dropdown-item-name {
      font-weight: 500;
      margin-bottom: 5px;
    }

    .dropdown-item-price {
      color: var(--primary-color);
      font-weight: 700;
    }

    .dropdown-item-remove {
      color: #dc3545;
      background: none;
      border: none;
      font-size: 14px;
      cursor: pointer;
    }

    .dropdown-footer {
      margin-top: 15px;
      text-align: center;
    }

    .dropdown-link {
      display: inline-block;
      padding: 8px 20px;
      background-color: var(--primary-color);
      color: white;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      transition: background-color 0.3s;
    }

    .dropdown-link:hover {
      background-color: var(--secondary-color);
    }

    .mobile-menu-toggle {
      display: none;
      background: none;
      border: none;
      font-size: 20px;
      cursor: pointer;
      color: var(--primary-color);
    }

    @media (max-width: 992px) {
      .search-input {
        width: 150px;
      }

      .search-input:focus {
        width: 180px;
      }

      .nav-menu ul {
        gap: 20px;
      }
    }

    @media (max-width: 768px) {
      .mobile-menu-toggle {
        display: block;
      }

      .nav-menu {
        position: fixed;
        top: 0;
        left: -100%;
        height: 100vh;
        width: 80%;
        background-color: white;
        z-index: 300;
        flex-direction: column;
        align-items: flex-start;
        padding: 80px 30px 30px;
        transition: left 0.3s ease;
      }

      .nav-menu.active {
        left: 0;
      }

      .nav-menu ul {
        flex-direction: column;
        width: 100%;
      }
      

      .nav-menu li {
        width: 100%;
        margin-bottom: 15px;
      }

      .search-bar-container {
        margin: 20px 0;
        width: 100%;
      }

      .search-input {
        width: 100%;
      }

      .mobile-icons {
        display: flex;
        gap: 20px;
        margin-top: 20px;
      }

      .nav-icons {
        display: none;
      }

      .close-menu {
        position: absolute;
        top: 20px;
        right: 20px;
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
      }

      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        z-index: 200;
        display: none;
      }

      .overlay.active {
        display: block;
      }
    }
  </style>
