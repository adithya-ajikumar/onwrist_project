<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <div class="w-64 bg-gray-800 text-white">
      <div class="p-6 text-xl font-bold">Account</div>

      <nav class="mt-6">
        <!-- Profile -->
        <div class="flex items-center px-6 py-3 cursor-pointer bg-gray-700 hover:bg-gray-700 transition-colors">
          <div class="mr-3"><i class="fas fa-user"></i></div>
          <span>Profile</span>
        </div>

        <!-- My Address -->
        <div class="flex items-center px-6 py-3 cursor-pointer hover:bg-gray-700 transition-colors">
          <div class="mr-3"><i class="fas fa-map-marker-alt"></i></div>
          <span>My Address</span>
        </div>

        <!-- My Orders -->
        <div class="flex items-center px-6 py-3 cursor-pointer hover:bg-gray-700 transition-colors">
          <div class="mr-3"><i class="fas fa-file-alt"></i></div>
          <span>My Orders</span>
        </div>

        <!-- My Wallet -->
        <div class="flex items-center px-6 py-3 cursor-pointer hover:bg-gray-700 transition-colors">
          <div class="mr-3"><i class="fas fa-wallet"></i></div>
          <span>My Wallet</span>
        </div>

        <!-- Settings -->
        <div class="flex items-center px-6 py-3 cursor-pointer hover:bg-gray-700 transition-colors">
          <div class="mr-3"><i class="fas fa-cog"></i></div>
          <span>Settings</span>
        </div>

        <!-- Logout - positioned at the bottom -->
        <div class="mt-auto pt-20">
          <div class="flex items-center px-6 py-3 cursor-pointer hover:bg-gray-700 transition-colors text-red-400">
            <div class="mr-3"><i class="fas fa-sign-out-alt"></i></div>
            <span>Logout</span>
          </div>
        </div>
      </nav>
    </div>

    <!-- Main content -->
    <div class="flex-1 overflow-y-auto">
      <header class="bg-white shadow">
        <div class="p-4 flex items-center justify-end">
          <div class="flex items-center space-x-2">
            <span>Sign in</span>
            <div class="w-8 h-8 bg-gray-300 rounded-full"></div>
          </div>
        </div>
      </header>

      <main class="p-6">
        <!-- Profile Section -->
        <div class="bg-white p-6 rounded-md shadow-sm mb-6">
          <div class="flex items-center space-x-4">
            <img
              src="<%= user.profilePicture || '/images/default-avatar.png' %>"
              alt="Profile Picture"
              class="w-16 h-16 rounded-full object-cover"
            />
            <div>
              <h1 class="text-2xl font-bold"><%= user.name %></h1>
              <button
                class="mt-2 bg-blue-500 text-white px-4 py-2 rounded-md flex items-center"
              >
                <i class="fas fa-user mr-2"></i> Edit Profile
              </button>
              <button
                class="mt-2 bg-green-500 text-white px-4 py-2 rounded-md flex items-center"
              >
                <i class="fas fa-key mr-2"></i><a href="changepassword.ejs"></a> Change Password
              </button>
            </div>
          </div>
        </div>

        <!-- Personal Information -->
        <div class="bg-white p-6 rounded-md shadow-sm">
          <h2 class="text-xl font-semibold mb-6">Personal Information</h2>

          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-start space-x-3">
              <i class="fas fa-envelope h-6 w-6 text-blue-500 mt-1"></i>
              <div>
                <p class="text-gray-500">Email</p>
                <p><%= user.email %></p>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start space-x-3">
              <i class="fas fa-phone h-6 w-6 text-blue-500 mt-1"></i>
              <div>
                <p class="text-gray-500">Phone</p>
                <p><%= user.phone %></p>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script>
    // Any client-side JavaScript can go here
    document.addEventListener('DOMContentLoaded', function() {
      // For example, handle the Edit Profile button click
      const editProfileBtn = document.querySelector('button');
      if (editProfileBtn) {
        editProfileBtn.addEventListener('click', function() {
          window.location.href = '/profile/edit';
        });
      }

      // Handle the Change Password button click
      const changePasswordBtn = document.querySelectorAll('button')[1];
      if (changePasswordBtn) {
        changePasswordBtn.addEventListener('click', function() {
          window.location.href = '/profile/change-password';
        });
      }
    });
  </script>
</body>
</html>
