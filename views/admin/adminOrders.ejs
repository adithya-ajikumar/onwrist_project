<%- include("../../views/partials/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Orders</title>
    <style>
        :root {
            --primary-color: #1e88e5;
            --dark-bg: #292d36;
            --light-bg: #f5f7fa;
            --text-color: #333;
            --pending-color: #ffc107;
            --processing-color: #ff9800;
            --shipped-color: #2196f3;
            --delivered-color: #4caf50;
            --cancelled-color: #f44336;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: var(--light-bg);
            color: var(--text-color);
            line-height: 1.6;
        }

        .container {
            display: flex;
            flex-direction: column;
            min-height: calc(100vh - 65px);
        }

        .content {
            flex: 1;
            padding: 2rem;
            background: #f4f7fc;
        }

        .content h1 {
            margin-bottom: 2rem;
            font-size: 1.75rem;
            font-weight: 600;
            color: #1a202c;
        }

        .order-card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .order-image {
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }

        .order-image img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .order-details {
            flex: 1;
        }

        .order-product {
            font-size: 18px;
            font-weight: 500;
            margin-bottom: 8px;
        }

        .order-info {
            margin-bottom: 4px;
            font-size: 14px;
            color: #666;
        }

        .order-info strong {
            color: #333;
        }

        .order-actions {
            margin-top: 10px;
            text-align: right;
        }

        .btn-details {
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
            font-weight: 500;
            transition: background-color 0.3s;
        }

        .btn-details:hover {
            background-color: #1565c0;
        }

        .status-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
            text-transform: uppercase;
            color: white;
        }

        .status-processing {
            background-color: var(--processing-color);
        }

        .status-shipped {
            background-color: var(--shipped-color);
        }

        .status-delivered {
            background-color: var(--delivered-color);
        }

        .status-cancelled {
            background-color: var(--cancelled-color);
        }

        .status-pending {
            background-color: var(--pending-color);
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }
            .order-card {
                flex-direction: column;
            }
            .order-image {
                margin-bottom: 15px;
            }
            .order-actions {
                margin-top: 15px;
                text-align: left;
            }
        }
    </style>
</head>
<body>
  <div class="container">
    <main class="content">
      <h1>My Orders</h1>
      <% if (orders && orders.length > 0) { %>
          <% orders.forEach(order => { %>
              <% order.orderItems.forEach(item => { %>
                  <div class="order-card">
                      <div class="order-image">
                          <% if (item.product && item.product.image) { %>
                              <img src="/Uploads/product-Images/<%= item.product.image %>" alt="<%= item.product.name %>">
                          <% } else { %>
                              <img src="/images/placeholder-product.png" alt="Product Image">
                          <% } %>
                      </div>
                      <div class="order-details">
                          <div class="order-product">
                              <%= item.product ? item.product.name : 'Product Name' %>
                              <% if (item.color) { %>
                                  - <span style="color: <%= item.color %>"><%= item.color %></span>
                              <% } %>
                          </div>
                          <div class="order-info">
                              <strong>Order ID:</strong> <%= order.orderId %>
                          </div>
                          <div class="order-info">
                              <strong>Date:</strong> <%= new Date(order.createdOn).toLocaleDateString() %>
                          </div>
                          <div class="order-info">
                              <strong>Quantity:</strong> <%= item.quantity %>
                          </div>
                          <div class="order-info">
                              <strong>Total:</strong> â‚¹<%= order.totalAmount.toFixed(2) %>
                          </div>
                          <div class="order-info">
                              <strong>Status:</strong> 
                              <span class="status-badge status-<%= item.itemStatus %>">
                                  <%= item.itemStatus %>
                              </span>
                          </div>
                      </div>
                      <div class="order-actions">
                          <a href="/admin/adminOrder/<%= order.orderId %>" class="btn-details">View Details</a>
                      </div>
                      <div class="order-actions">
                          <select id="status-<%= order.orderId %>" required>
                              <option value="" disabled selected>Update Status</option>
                              <option value="Pending">Pending</option>
                              <option value="Processing">Processing</option>
                              <option value="Shipped">Shipped</option>
                              <option value="Delivered">Delivered</option>
                              <option value="Cancelled">Cancelled</option>
                              <option value="Return Request">Return Request</option>
                              <option value="Returned">Returned</option>
                          </select>
                          <button class="btn-details" onclick="updateOrderStatus('<%= order.orderId %>')">Update</button>
                      </div>
                  </div>
              <% }); %>
          <% }); %>
      <% } else { %>
          <div style="text-align: center; padding: 50px 0;">
              <h3>No orders found</h3>
              <p>You haven't placed any orders yet.</p>
              <a href="/products" style="color: var(--primary-color); text-decoration: none;">
                  Start shopping now
              </a>
          </div>
      <% } %>
    </main>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
  <script>
    async function updateOrderStatus(orderId) {
        const status = document.getElementById(`status-${orderId}`).value;

        if (!status) {
            Swal.fire({
                icon: 'warning',
                title: 'Invalid Status',
                text: 'Please select a valid status before updating.',
                confirmButtonColor: '#ffc107',
            });
            return;
        }

        try {
            const response = await fetch(`/admin/update-order-status/${orderId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ status }),
            });

            const data = await response.json();

            if (response.ok) {
                Swal.fire({
                    icon: 'success',
                    title: 'Status Updated',
                    text: data.message,
                    confirmButtonColor: '#28a745',
                }).then(() => {
                    location.reload(); // Reload the page to reflect changes
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Update Failed',
                    text: data.error || 'Failed to update the order status.',
                    confirmButtonColor: '#dc3545',
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An unexpected error occurred. Please try again later.',
                confirmButtonColor: '#dc3545',
            });
        }
    }
  </script>
</body>
</html>